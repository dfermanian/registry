<% title "Donations" %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Card Type</th>
    <th>Card Expiration</th>
    <th>Amount</th>
  </tr>
  <% for donation in @donations %>
    <tr>
      <td><%=h donation.first_name %></td>
      <td><%=h donation.last_name %></td>
      <td><%=h donation.card_type %></td>
      <td><%=h donation.card_expiration %></td>
      <td><%=h donation.amount %></td>
      <td><%= link_to "Show", donation %></td>
      <td><%= link_to "Edit", edit_donation_path(donation) %></td>
      <td><%= link_to "Destroy", donation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Donation", new_donation_path %></p>